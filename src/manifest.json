{
    "manifest_version": 3,
    "name": "xdebug extension",
    "version": "1.0.2",
    "description": "A modern, dependency-free, extension for Xdebug",
    "author": "fraser.chapman@gmail.com",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "icons": {
        "16": "img/disable16.png",
        "32": "img/disable32.png",
        "128": "img/disable128.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "service_worker.js"
    },
    "commands": {
        "run-toggle-debug": {
            "suggested_key": {
                "default": "Alt+C",
                "mac": "Alt+C"
            },
            "description": "Toggle debugging"
        },
        "run-toggle-profile": {
            "suggested_key": {
                "default": "Alt+V",
                "mac": "Alt+V"
            },
            "description": "Toggle profiling"
        },
        "run-toggle-trace": {
            "suggested_key": {
                "default": "Alt+B",
                "mac": "Alt+B"
            },
            "description": "Toggle tracing"
        },
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+X",
                "mac": "Alt+X"
            }
        }
    }
}